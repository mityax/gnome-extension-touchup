{
  "name": "gnometouch",
  "version": "1.0.0",
  "description": "Enhances various aspects of the GNOME experience when using a touch device.",
  "author": "mityax",
  "type": "module",
  "main": "dist/extension.js",
  "private": true,
  "scripts": {
    "clear": "rm -rf dist",
    "build": "node esbuild.js",
    "install": "npm run build && gnome-extensions install -f ./dist/gnometouch@mityax.github.com.zip && gnome-extensions enable gnometouch@mityax.github.com",
    "validate": "tsc --noEmit",
    "dev": "npm run build && dbus-run-session -- $(pwd)/run.sh  2> >(grep -i -P --color 'gjs|gnometouch|JS Error' 1>&2)",
    "dev-tty": "dbus-run-session $(pwd)/run.sh --tty --build",
    "dev-verbose": "npm run build && dbus-run-session -- $(pwd)/run.sh",
    "logs": "source $(pwd)/.env && tail -f $GNOMETOUCH_LOGFILE"
  },
  "devDependencies": {
    "@girs/gnome-shell": "^47.0.0-next.4",
    "@girs/st-15": "^15.0.0-4.0.0-beta.16",
    "@girs/clutter-15": "^15.0.0-4.0.0-beta.16",
    "@girs/cogl-15": "^15.0.0-4.0.0-beta.16",
    "@girs/cairo-1.0": "^1.0.0-4.0.0-beta.14",
    "@girs/gdkpixbuf-2.0": "^2.0.0-3.3.0",
    "@girs/gio-2.0": "^2.78.0-3.3.0",
    "@girs/gjs": "^4.0.0-beta.3",
    "@girs/gobject-2.0": "^2.78.0-3.3.0",
    "@girs/graphene-1.0": "^1.0.0-4.0.0-beta.9",
    "@girs/pango-1.0": "^1.54.0-4.0.0-beta.11",
    "@girs/adw-1": "^1.6.0-4.0.0-beta.16",
    "@girs/gtk-4.0": "^4.15.5-4.0.0-beta.16",
    "@tsconfig/recommended": "^1.0.3",
    "adm-zip": "^0.5.10",
    "better-typescript-lib": "^2.5.0",
    "core-js": "^3.33.3",
    "esbuild": "^0.18.3",
    "esbuild-gjs": "^1.0.0",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-replace": "^1.4.0",
    "esbuild-sass-plugin": "^1.8.2",
    "mv": "^2.1.1",
    "typescript": "^5.3.2"
  }
}
