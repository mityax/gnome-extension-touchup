{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "strict": true,
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "strict": true,
    "target": "ES2022",
    "paths" : {
      "$src/*": ["./src/*"],
      "gi://*": ["@girs/*"]
    },
    "lib": [
      "ES2023"
    ],
    "jsx": "preserve",
    "sourceMap": false
  },
  "include": [
    "src/ambient.d.ts",
    "@girs/gjs",
    "*.d.ts"
  ],
  "files": [
    "src/extension.ts",
    "src/prefs.ts",
  ]
}

